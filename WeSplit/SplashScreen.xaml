<Window x:Class="WeSplit.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeSplit"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Loaded="SplashScreen_Loaded"
        Title="SplashScreen" Height="450" Width="800">

    <Window.Resources>
        <local:DirectoryConverter x:Key="directoryConverter"/>
    </Window.Resources>
    
    <Border CornerRadius="25" Background="White" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="83*"/>
                <RowDefinition Height="279*"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="88*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Label Margin="10" FontSize="17" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding DesName}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Image Source="{Binding DesImage, Converter={StaticResource directoryConverter}}"/>
            </Grid>

            <Grid Grid.Row="2">
                <ScrollViewer Margin="10" ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <TextBlock TextAlignment="Center" FontSize="13" TextWrapping="Wrap" Text="{Binding DesDescription}"/>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="3">
                <StackPanel HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Unchecked="CheckBox_Unchecked" Checked="CheckBox_Checked" IsChecked="True"/>
                        <TextBlock Text="Hiện hộp thoại mỗi khi khởi động"/>
                    </StackPanel>
                    <Button Click="Cancel_Click" Content="Bỏ qua"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
