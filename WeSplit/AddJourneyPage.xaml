<Page x:Class="WeSplit.AddJourneyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeSplit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddJourneyPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="206*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="GoBackBtn" Content="Quay lại" Click="GoBackBtn_Click"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="97*"/>
                <ColumnDefinition Width="303*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="68*"/>
                    <RowDefinition Height="127*"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Row="0" x:Name="JourneyNameTextBox"/>
                <DockPanel LastChildFill="True" Grid.Row="1">
                    <Button x:Name="AddCoverImageBtn" DockPanel.Dock="Bottom" Content="Thêm ảnh bìa" Click="AddCoverImageBtn_Click"/>
                    <Image/>
                </DockPanel>
                <DockPanel LastChildFill="True" Grid.Row="2">
                    <Button Content="Thêm thành viên" Name="AddMemberBtn" Click="AddMemberBtn_Click"/>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
